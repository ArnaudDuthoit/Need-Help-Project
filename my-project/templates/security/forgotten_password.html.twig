{% extends 'base.html.twig' %}


{% block title %}Mot de passe oublié{% endblock %}


{% block body %}


    <h2 class="jumbotron text-center mt-4"> Mot de passe oublié </h2>

    <div class="container mt-4">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div> Un lien de réinitialisation vous sera envoyé à cette adresse mail.</div>

        <form method="post" class="mt-4">

            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required
                   autofocus>

            <button class="btn btn-outline-dark mt-4" type="submit">
                Envoyez email !
            </button>
        </form>
    </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Connexion | NeedHelp {% endblock %}

{% block body %}

    <div class="container mt-4 text-center">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>

    <div class="container mt-4">
        <div class="d-flex justify-content-center h-100">
            <div class="card main_card">
                <div class="card-header text-center main_card-header">
                    <h3>Se connecter</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey | trans(error.messagedata, 'security') }}
                        </div>
                    {% endif %}
                    <form action="{{ path('security_login') }}" method="post" id="login_form">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text login_span"><i class="fas fa-user"></i></span>
                            </div>
                            <input placeholder="Adresse mail" required name="_username" type="text"
                                   value="{{ last_username }}">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text login_span"><i class="fas fa-key"></i></span>
                            </div>
                            <input placeholder="Mot de passe" required name="_password" type="password">
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-left login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center login_links">
                        <a class="btn" href="{{ path('security_registration') }}" style="color:white"> S'inscrire </a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="btn" href="{{ path('forgotten_password') }}" style="color:white"> Mot de passe oubli√© ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}